        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mission"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/red_200"
            android:fontFamily="@font/arima_bold"
            android:textSize="20sp"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/aboutmision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal|center"
                android:text="To provide, nurture and maintain an environment of high academic excellence, research and
    entrepreneurship for all aspiring students, which will prepare them to face global challenges
