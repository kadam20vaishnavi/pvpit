            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/red_200"
            android:fontFamily="@font/arima_bold"
            android:textSize="20sp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/aboutquality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal|center"
            android:text="We at Padmbhooshan Vasantdada Patil Institute of Technology are committed to maximize
student satisfaction through improved performance by imparting value based quality
education."
            android:fontFamily="@font/arima_regular"
            android:textColor="@color/black"/>

