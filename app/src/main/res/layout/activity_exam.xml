<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exam">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/li1"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logopvpit"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/img"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logotssm"
            android:layout_centerHorizontal="true"
            android:id="@+id/img2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical"
        android:id="@+id/li2"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/arima_regular"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PADMABHOOSHAN VASANTDADA PATIL
INSTITUTE OF TECHNOLOGY"
            android:textColor="@color/red_700"
            android:fontFamily="@font/arima_bold"
            android:lineSpacingExtra="2dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Bavdhan, Pune"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/arima_regular"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/howworks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How Exam Works?"
                android:textColor="@color/black"
                android:padding="7dp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingEnd="10dp">
                <ImageView
                    android:id="@+id/volumeupc"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_volume_up_24"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/volumedownc"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_volume_off_24"
                    android:layout_gravity="right"
                    android:visibility="visible"
                    />
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:background="@color/red_700"
            android:fontFamily="@font/arima_bold"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal|center"
            />

        <Button
            android:id="@+id/btnSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Register"
            android:textSize="18sp"
            android:background="@color/red_700"
            android:fontFamily="@font/arima_bold"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal|center"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>